{
  "name": "lcml",
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "version": "1.0.0",
  "description": "Low-Code Markup Language (DSL) for Values with Dynamic Expressions",
  "main": "./dist/index.js",
  "typings": "./dist/index.d.ts",
  "module": "./lib/index.js",
  "scripts": {
    "test": "jest",
    "prepare": "npm run clean && npm run build",
    "clean": "rimraf dist temp etc lib *.tsbuildinfo && mkdir etc",
    "dev": "rimraf dist && mkdir dist && ( echo \"export * from '../lib'\" | tee dist/index.js dist/index.d.ts ) && tsc -b -w",
    "build": "tsc -b && api-extractor run --local && esbuild --bundle lib/index.js --outdir=dist --minify --sourcemap --format=cjs"
  },
  "files": [
    "dist",
    "lib",
    "!**/*.map",
    "!**/*.test.js",
    "!**/*.test.d.ts"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lyonbot/lcml.git"
  },
  "keywords": [
    "dsl",
    "markup",
    "lowcode",
    "low-code",
    "json",
    "dynamic",
    "expression",
    "interpolate",
    "readable",
    "human-readable"
  ],
  "author": "lyonbot",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lyonbot/lcml/issues"
  },
  "homepage": "https://github.com/lyonbot/lcml/tree/master/packages/lcml#readme"
}
